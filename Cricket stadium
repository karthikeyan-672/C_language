#include <math.h>
#include <stdio.h>
#include <string.h>
#include <stdlib.h>
#include <assert.h>
#include <limits.h>
#include <stdbool.h>
#include <stdio.h>

int main() {
    int length, breadth;
    scanf("%d", &length);
    scanf("%d", &breadth);

    int ropeLength = 2 * (length + breadth);

    int carpetArea = length * breadth;

    printf("%d\n", ropeLength);
    printf("%d\n", carpetArea);

    return 0;
}
