#include <math.h>
#include <stdio.h>
#include <string.h>
#include <stdlib.h>
#include <assert.h>
#include <limits.h>
#include <stdbool.h>
#include <stdio.h>

int main() {
    float principal, rate, years;
    float interest, amount, discount, finalAmount;
    scanf("%f", &principal);
    scanf("%f", &rate);
    scanf("%f", &years);
    interest = (principal * rate * years) / 100;
    amount = principal + interest;
    discount = (2.0 / 100) * interest;
    finalAmount = amount - discount;
    printf("%.2f\n", interest);
    printf("%.2f\n", amount);
    printf("%.2f\n", discount);
    printf("%.2f\n", finalAmount);

    return 0;
}
